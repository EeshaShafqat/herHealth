<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
        </shape>
    </item>

    <!-- Outer Shadows -->
    <item android:right="15dp" android:left="15dp" android:top="15dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Black outer shadow color -->
        </shape>
    </item>

    <!-- Inner Shadows -->
    <item android:right="-10dp" android:left="-10dp" android:top="-10dp" android:bottom="-10dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/pink"
                android:endColor="@android:color/white"
            android:angle="45"/>
        </shape>
    </item>

</layer-list>
