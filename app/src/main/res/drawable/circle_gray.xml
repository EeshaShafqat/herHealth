<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: White circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E7E8EA" />
        </shape>
    </item>
    <!-- Top layer: Gray border with shadow -->
    <item
        android:right="1dp"
        android:left="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#B0B0B0" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>
