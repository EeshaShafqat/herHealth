<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid white rectangle as the background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Dotted border on top, right, and bottom sides -->
    <item
        android:left="0dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Transparent color -->
            <stroke
                android:width="0.7dp"
                android:color="#9747FF"
                android:dashWidth="10dp"
                android:dashGap="5dp" />
        </shape>
    </item>
</layer-list>
