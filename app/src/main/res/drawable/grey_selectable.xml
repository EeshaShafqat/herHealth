<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#25040404"/>
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#258A8A8A"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent color for other states -->
        </shape>
    </item>
</selector>

