<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <stroke android:color="#bfbfbf" android:width="0.2dp"/>
            <gradient android:startColor="#F89DCE" android:endColor="@color/pink" android:angle="270"></gradient>

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <stroke android:color="#bfbfbf" android:width="0.2dp"/>
            <gradient android:startColor="#F89DCE" android:endColor="@color/pink" android:angle="270"></gradient>
            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- Disabled state (optional) -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#CCCCCC" />
            <!-- Add any other styling attributes if needed -->
        </shape>
    </item>
</selector>

