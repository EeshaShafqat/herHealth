<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/white"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/existing_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Add the Toolbar as a sibling of DrawerLayout -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:titleEnabled="false"
            android:layout_gravity="start"
            app:collapseIcon="@drawable/ic_menu"

            >

        </androidx.appcompat.widget.Toolbar>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="100dp"
                    android:id="@+id/newPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="28sp" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/outfit_medium"
                    android:text="User Analytics"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/username"
                    android:paddingLeft="17dp"
                    android:layout_alignLeft="@id/head"
                    android:layout_alignTop="@id/head"
                    android:paddingRight="17dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/outfit_light"
                    android:textSize="20sp"
                    android:gravity="fill"
                    android:textAllCaps="false"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/interaction1"
                    android:drawableRight="@drawable/down_arrow3"
                    android:background="@drawable/round_lightgrey_rectangle"
                    android:text="Content Interaction">

                </Button>


                <Button
                    android:id="@+id/email"
                    android:layout_alignLeft="@id/username"
                    android:layout_alignTop="@id/username"
                    android:layout_width="match_parent"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"

                    android:layout_marginTop="70dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/outfit_light"
                    android:textSize="20sp"
                    android:gravity="fill"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/analysis_1_1"
                    android:drawableRight="@drawable/down_arrow3"
                    android:background="@drawable/round_lightgrey_rectangle"
                    android:text="User-Engagement Metrics">

                </Button>

                <Button
                    android:id="@+id/password"
                    android:layout_alignLeft="@id/email"
                    android:layout_alignTop="@id/email"
                    android:layout_width="match_parent"
                    android:layout_marginTop="70dp"
                    android:paddingRight="17dp"

                    android:paddingLeft="17dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/outfit_light"
                    android:textSize="20sp"
                    android:gravity="fill"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/feedback1"
                    android:drawableRight="@drawable/down_arrow3"
                    android:background="@drawable/round_lightgrey_rectangle"
                    android:text="User Feedback">

                </Button>

                <TextView
                    android:id="@+id/ai"
                    android:layout_alignLeft="@id/password"
                    android:paddingLeft="17dp"
                    android:layout_alignTop="@id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/outfit_medium"
                    android:text="User Management"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/remove"
                    android:layout_alignLeft="@id/ai"
                    android:layout_alignTop="@id/ai"
                    android:layout_width="match_parent"
                    android:paddingRight="17dp"

                    android:layout_marginTop="40dp"
                    android:paddingLeft="17dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/outfit_light"
                    android:textSize="20sp"
                    android:gravity="fill"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/remove_user1"
                    android:drawableRight="@drawable/down_arrow3"
                    android:background="@drawable/round_lightgrey_rectangle"
                    android:text="Remove User">

                </Button>
                <Button
                    android:id="@+id/forum"
                    android:layout_alignLeft="@id/remove"
                    android:layout_alignTop="@id/remove"
                    android:layout_width="match_parent"
                    android:paddingRight="17dp"

                    android:layout_marginTop="70dp"
                    android:paddingLeft="17dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/outfit_light"
                    android:textSize="20sp"
                    android:gravity="fill"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/moderator1"
                    android:drawableRight="@drawable/down_arrow3"
                    android:background="@drawable/round_lightgrey_rectangle"
                    android:text="Forum Moderation">

                </Button>
                <Button
                    android:id="@+id/docVerify"
                    android:layout_alignLeft="@id/forum"
                    android:layout_alignTop="@id/forum"
                    android:layout_width="match_parent"
                    android:paddingRight="17dp"

                    android:layout_marginTop="70dp"
                    android:paddingLeft="17dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/outfit_light"
                    android:textSize="20sp"
                    android:gravity="fill"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/document1"
                    android:drawableRight="@drawable/down_arrow3"
                    android:background="@drawable/round_lightgrey_rectangle"
                    android:text="Doctor Verification">

                </Button>

            </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


    <!-- NavigationView -->
<com.google.android.material.navigation.NavigationView
android:id="@+id/nav_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
app:menu="@menu/menu"
app:headerLayout="@layout/header"
app:itemTextAppearance="@style/MyMenuItemStyle"
app:itemIconTint="@null"

    />

    </androidx.drawerlayout.widget.DrawerLayout>
