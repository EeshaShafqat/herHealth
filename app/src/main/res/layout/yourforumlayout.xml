<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:layout_marginTop="10dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout

        android:id="@+id/forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"

            android:src="@drawable/womens_day1" />

        <TextView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textSize="20sp"
            android:fontFamily="@font/outfit_medium"
            android:text="@string/menstruatingwomenpakistan"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            />

        <com.theophrast.ui.widget.SquareImageView

            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:src="@drawable/full_screen"

            />


    </LinearLayout>

    <RelativeLayout

        android:id="@+id/ContentRL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/forum"

        >

        <TextView
            android:id="@+id/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_regular"
            android:paddingVertical="15dp"
            android:paddingLeft="15dp"
            android:text="Hey everyone! I wanted to share some of the strategies I've found helpful in dealing with period pain. I know that for many of us, those days of the month can be really challenging..."
            android:textColor="@color/black"
            android:textSize="18sp"

            />



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/foumDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ContentRL"
        android:paddingVertical="5dp"
        android:layout_marginBottom="5dp"


        >


        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:padding="10dp"

            >

            <TextView
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members"
                android:gravity="center_vertical"
                android:fontFamily="@font/dm_sans_24pt_regular"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/memberscount"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/memberscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/dm_sans_24pt_bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/dm_sans_24pt_regular"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/postcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toLeftOf="@id/posts"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/dm_sans_24pt_bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>
</androidx.cardview.widget.CardView>
