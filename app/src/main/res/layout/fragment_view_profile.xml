<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:layout_marginBottom="63dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp"

        tools:context=".MainActivity"
        android:background="@color/white"
        >


        <LinearLayout
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/ellipse1"
                android:layout_gravity="center_vertical"

                >

            </de.hdodenhof.circleimageview.CircleImageView>


            <LinearLayout

                android:id="@+id/postLL"
                android:layout_gravity="center_vertical"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView

                    android:id="@+id/postCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/dm_sans_24pt_bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"

                    >

                </TextView>

                <TextView

                    android:id="@+id/Posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="posts"
                    android:textSize="18sp"
                    android:fontFamily="@font/dm_sans_24pt_regular"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"

                    >

                </TextView>
            </LinearLayout>




            <LinearLayout

                android:id="@+id/followerLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:foreground="@drawable/pink_selectable">

                <TextView

                    android:id="@+id/followerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/dm_sans_24pt_bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"

                    >

                </TextView>

                <TextView

                    android:id="@+id/Followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="followers"
                    android:textSize="18sp"
                    android:fontFamily="@font/dm_sans_24pt_regular"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"

                    >

                </TextView>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/followingLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:foreground="@drawable/pink_selectable">

                <TextView

                    android:id="@+id/followingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/dm_sans_24pt_bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"

                    >

                </TextView>

                <TextView

                    android:id="@+id/Following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="following"
                    android:textSize="18sp"
                    android:fontFamily="@font/dm_sans_24pt_regular"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"

                    >

                </TextView>
            </LinearLayout>






        </LinearLayout>

        <LinearLayout

            android:id="@+id/identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayesha"
                android:fontFamily="@font/dm_sans_24pt_bold"
                android:layout_below="@id/image"
                android:textSize="24sp"
                android:textColor="@color/black"
                />



            <ImageView
                android:id="@+id/verificationStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/name"
                android:src="@drawable/verified"
                android:visibility="invisible"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>






        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, I'm Ayesha from Islamabad"
            android:fontFamily="@font/dm_sans_24pt_regular"
            android:layout_below="@id/identity"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            />


        <RelativeLayout

            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bio"
            >

            <Button

                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_hover"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dm_sans_24pt_regular"
                android:textSize="18sp"
                android:text="Follow"
                android:textAllCaps="false"
                android:elevation="5dp"
                android:textColor="@color/white"
                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="15dp"
                android:drawableEnd="@drawable/follow"/>









        </RelativeLayout>

        <LinearLayout

            android:id="@+id/subheadings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="18dp">


            <TextView

                android:id="@+id/yourposts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:fontFamily="@font/dm_sans_24pt_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:visibility="invisible"

                />




            <TextView

                android:id="@+id/yourforums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Forums"
                android:fontFamily="@font/dm_sans_24pt_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:visibility="invisible"

                />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_black"
            >

            <ImageButton


                android:id="@+id/posts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/post"
                android:layout_weight="1"
                android:background="@color/black"
                android:layout_marginEnd="0.5dp"
                style="?android:attr/buttonBarButtonStyle"
                android:foreground="@drawable/white_selectable"


                />

            <ImageButton


                android:id="@+id/forums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/forum"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/black"
                android:foreground="@drawable/white_selectable"
                android:layout_marginStart="0.5dp"/>



        </LinearLayout>






        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yourForums"


            >


        </androidx.recyclerview.widget.RecyclerView>





    </LinearLayout>
</ScrollView>